
@{
    ViewData["Title"] = "Contact";
}

<!--Section: Contact v.2-->
<section class="mb-4">

    <!--Section heading-->
    <h2 class="h1-responsive font-weight-bold text-center my-4">Contact us</h2>

    <!--Section description-->
    <p class="text-center w-responsive mx-auto mb-5" style="font-size:large">
        Do you have any questions? Please do not hesitate to contact us directly. Our team will come back to you within
        a matter of hours to help you.
    </p>


    <div style="color:crimson" id="status"></div>
    <div class="row">

        <!--Grid column-->
        <div class="col-md-9 mb-md-0 mb-5">
            <form id="contact-form" name="contact-form" asp-action="SendContact" method="POST">

                <!--Grid row-->
                <div class="row">

                    <!--Grid column-->
                    <div class="col-md-6">
                        <div class="md-form mb-0">
                            <input type="text" id="name" name="name" class="form-control" required> <i class="fa fa-info-circle" title="Enter your name"></i>
                            <label for="name" class="required">Your name</label>
                        </div>
                    </div>
                    <!--Grid column-->
                    <!--Grid column-->
                    <div class="col-md-6">
                        <div class="md-form mb-0">
                            <input type="text" id="email" name="email" class="form-control" required>  <i class="fa fa-info-circle" title="Enter your email"></i>
                            <label for="email" class="required">Your email</label>
                        </div>
                    </div>
                    <!--Grid column-->

                </div>
                <!--Grid row-->
                <!--Grid row-->
                <div class="row">
                    <div class="col-md-12">
                        <div class="md-form mb-0">
                            <input type="text" id="subject" name="subject" class="form-control"> <i class="fa fa-info-circle" title="Enter Subject"></i>
                            <label for="subject" class="">Subject</label>
                        </div>
                    </div>
                </div>
                <!--Grid row-->
                <!--Grid row-->
                <div class="row">

                    <!--Grid column-->
                    <div class="col-md-12">

                        <div class="md-form">
                            <textarea type="text" id="message" name="message" rows="2" class="form-control md-textarea"></textarea> <i class="fa fa-info-circle" title="Enter your message"></i>
                            <label for="message">Your message</label>
                        </div>

                    </div>
                </div>
                <!--Grid row-->

                <div class="form-check">
                    <input type="checkbox" class="form-check-input" name="updates" id="updates" value="1"> <i class="fa fa-info-circle" title="Enter do you want get Newsletter"></i>
                    <label for="updates" class="form-check-label">Notify me about new updates</label>
                </div>



            </form>

            <div class="text-center text-md-left">
                <a class="btn btn-primary" onclick="validateForm()">Send</a>
            </div>
            <div style="color:crimson" id="status"></div>

        </div>
        <!--Grid column-->
        <!--Grid column-->
        <div class="col-md-3 text-center">
            <ul class="list-unstyled mb-0">
                <li>
                    <i class="glyphicon glyphicon-map-marker"></i>
                    <p>San Francisco, CA 94126, USA</p>
                </li>

                <li>
                    <i class="glyphicon glyphicon-phone-alt"></i>
                    <p>+ 01 234 567 89</p>
                </li>

                <li>
                    <i class="glyphicon glyphicon-envelope"></i>
                    <p>contact@easybuy.com</p>
                </li>
            </ul>
        </div>
        <!--Grid column-->

    </div>
    <br />
    <br />
    <br />

    <h2 class="h1-responsive font-weight-bold text-center my-4">Visit us</h2>
    <div id="map"></div>

</section>
<!--Section: Contact v.2-->

@section Scripts {


    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB9pMIr5tDT3urbxxAesohBPzUHwPib8zU&callback=initMap"
            type="text/javascript"></script>


}


